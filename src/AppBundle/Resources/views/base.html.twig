<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>
            {% block title %}{% endblock %}{% if block('title') %} - {% endif %}Upnext
        </title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            <link href="{{ asset('build/css/loader.css') }}" rel="stylesheet" />
            <link href="//fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
            <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <link href="{{ asset('build/css/materialize.css') }}" rel="stylesheet" />
            <link href="{{ asset('build/css/app.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% if hide_navbar is not defined  %}
            {% include "AppBundle:_layout:nav.html.twig" %}
        {% endif %}
        {% block body %}{% endblock %}
        {% if hide_navbar is not defined  %}
            {% include "AppBundle:_layout:footer.html.twig" %}
        {% endif %}
        {% include "AppBundle:_modals:play.html.twig" %}
        {% block javascripts %}
            <script src="//apis.google.com/js/api.js"></script>
            <script src="//code.jquery.com/jquery-3.2.1.min.js"></script>
            <script src="{{ asset('js/materialize.js') }}"></script>
            <script src="{{ asset('js/autobahn.min.js') }}"></script>
            <script src="{{ asset('build/js/app.js') }}"></script>
            {% if app.environment == "dev" %}
                <script src="http://localhost:35730/livereload.js"></script>
            {% endif %}
        {% endblock %}
    </body>
</html>
